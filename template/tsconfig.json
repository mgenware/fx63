{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        },
        "target": "ES5"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
